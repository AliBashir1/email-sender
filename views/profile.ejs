<%- include('includes/header')%>
    <div class="container-fluid background-container  pt-3 ">
        <div class="container">
            <div class="row">
                <!-- first column -->
                <div class="col-md-2  p-2 border">
                    <h2 class="font-weight-bolder"><%= fullname %> </h2>
                    <h2 class="small" ><%= email %></h2>
                </div>
                <!-- second column -->
                <!-- client list -->
                <div class="col-md-8 border client-list">
                    <div class="text-center">
                        <h1>client list</h1>
                    </div>
                    <div class="accordion" id="clientList">
                        <!-- if contacts exits -->
                        <% if (contacts){ %>
                           <% contacts.forEach((contact)=>{ %>
                            <div class="card">
                                <div class="card-header p-0" id="headingOne">
                                    <h2 class="mb-0">
                                    <button class="btn btn-light btn-block text-left p-3 rounded-0" type="button" data-toggle="collapse" data-target="#<%= contact.c_id %>" aria-expanded="true" aria-controls="<%= contact.c_id %>">
                                        <p> Name: <%= contact.firstName %> <%= contact.lastName%></p>
                                        <p> Email: <%= contact.email %></p>
                                    </button>
                                    </h2>
                                </div>
    
                                <div id="<%= contact.c_id %>" class="collapse" aria-labelledby="headingOne" data-parent="#clientList">
                                    <div class="card-body row justify-content-start">
                                        <div id="sendEmail" class="col-3">
                                            <form action="" method="POST">
                                                <button type="button" class="bttn bttn-success"> 
                                                    <svg data-toggle="tooltip" width="1.5em" height="1.5em" viewBox="0 0 210 181" fill="#87E4BA" xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M208 2L4 99.94L53.9444 110.56L208 2Z" fill="#00203F"/>
                                                        <path d="M208 2L53.9444 110.56V154.22L208 2Z" fill="#00203F"/>
                                                        <path d="M140.684 179L208 2L95.0822 128.26L140.684 179Z" fill="#00203F"/>
                                                        <path d="M95.0822 128.26L208 2L53.9444 154.22L95.0822 128.26Z" fill="#00203F"/>
                                                        <path d="M208 2L4 99.94L53.9444 110.56M208 2L140.684 179L95.0822 128.26M208 2L95.0822 128.26M208 2L53.9444 110.56M208 2L53.9444 154.22M95.0822 128.26L53.9444 154.22M53.9444 110.56V154.22" stroke="black" stroke-width="2"/>
                                                    </svg>
                                                    send
                                                </button>   
                                            </form>
                                        </div>
                                        <!-- edit -->
                                        <div id="edit-contact" class="col-3">
                                            <button type="submit" class="bttn bttn-warning" data-toggle="collapse" data-target="#<%= contact.c_id %>-edit" aria-expanded="true" aria-controls="<%= contact.c_id %>-edit">
                                                <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="#FFB61D" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                                </svg>
                                                edit
                                            </button>                     
                                        </div>

                                        <!-- delete -->
                                        <div id="delete-contact" class="col-3" data-toggle="collapse" data-target="#<%= contact.c_id %>-delete" aria-expanded="true" aria-controls="<%= contact.c_id %>-delete" > 
                                            <button type="submit" class="bttn bttn-danger">
                                                <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-trash" fill="#EB5757" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                                </svg>
                                                delete
                                            </button>
                                        </div>
                                        <!-- delete form -->
                                        <div class="row collapse" id="<%= contact.c_id %>-delete">
                                            <div class="col-md-6">
                                                <button type="button" class="bttn bttn-success col" data-toggle="collapse" data-target="#<%= contact.c_id %>-delete" aria-expanded="true" aria-controls="<%= contact.c_id %>-delete" > 
                                                    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-x" fill="#87E4BA" xmlns="http://www.w3.org/2000/svg">
                                                        <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                                    </svg>
                                                    No
                                                </button> 
                                            </div>
                                            <form class="col-md-6" action="/profile/<%= email %>/delete-contact/<%= contact._id %>" method="POST">
                                                <button type="submit" class="bttn bttn-danger" > 
                                                    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-check2" fill="#EB5757" xmlns="http://www.w3.org/2000/svg">
                                                        <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                                                    </svg>
                                                    Yes!
                                                </button> 
                                            </form>
                                            
                                    </div>
                                        
                                    <!-- edit -->
                                   
                                    <div class=" collapse row justify-content-center border mt-2" id="<%= contact.c_id %>-edit">
                                        <div class="col-md-10">
                                            <h1 class="text-center"> Edit Contact</h1>
                                            <form action="/profile/<%= email %>/edit-contact/<%= contact._id %>" method="POST" >
                                                <label for="firstName" class="d-none" >First Name</label>
                                                <input required name="firstName" type="text" id="firstName" value="<%= contact.firstName %>">
                                                <label for="lastName" class="d-none" >Last Name</label>
                                                <input required name="lastName" type="text" id="lastName" value="<%= contact.lastName %>">
                                                <label for="newEmail" class="d-none" >Email</label>
                                                <input name="newEmail" type="email" id="newEmail" placeholder="Enter new email address">
                                                <label for="disabledEmail" class="d-none" >Email</label>
                                                <input name="currentEmail" type="email" id="disabledEmail" value="<%= contact.email %>" readonly>
                                        
                                                <input type="submit">

                                            </form> 
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                            

                        <%  }) %>
                            
                       <% } else { %>
                            <p> No contacts </p>
                       <% } %>
                        <!-- end of contacts -->
                    </div>
                </div>

                <!-- third column -->
                <div class="col-md-2 border ">
                    <button type="button" class="bttn bttn-success mt-2" data-toggle="collapse" href="#newContactForm" role="button" aria-expanded="false" aria-controls="newContactForm"> 
                        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-person-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10zM13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                        </svg>
                        Add Contact
                    </button>   
                </div>
                
            <!-- end of row div -->
            </div>
            <% if (contactErrors.length > 0) { %>
                <div class=" collapse show row justify-content-center border mt-2" id="newContactForm">
                    <%- include ('includes/flash') %>
            <% } else { %>
                <div class=" collapse row justify-content-center border mt-2" id="newContactForm">
            <% } %>
                <div class="col-md-7">
                    <h1 class="text-center">New Contact</h1>
                    <form action="/profile/<%= email %>/add-contact" method="POST" >
                        <label for="firstName" class="d-none" >First Name</label>
                        <input required name="firstName" type="text" id="firstName" placeholder="First Name">
                        <label for="lastName" class="d-none" >Last Name</label>
                        <input required name="lastName" type="text" id="lastName" placeholder="Last name">
                        <label for="registerEmail" class="d-none" >Email</label>
                        <input required name="email" type="email" id="registerEmail" placeholder="Enter client's Email">
                        <input type="submit">
                    </form> 
                </div>
            </div>
        </div>
    </div>

<%- include('includes/footer')%>

    <!--  -->

      
